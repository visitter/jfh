CREATE TABLE AUTHORS(
	AUTHOR_ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
	AUTHOR_FNAME VARCHAR(20) NOT NULL,
	AUTHOR_LNAME VARCHAR(20) NOT NULL
);

CREATE TABLE BOOKS(
	BOOK_ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
	BOOK_NAME VARCHAR(100) NOT NULL,
	BOOK_YEAR INT NOT NULL,
	BOOK_ISBN VARCHAR(20) NOT NULL
);

CREATE TABLE AUTHOR_ISBN(
	AUTHOR_ID INTEGER NOT NULL,
	BOOK_ISBN VARCHAR(20)
);

INSERT INTO AUTHORS VALUES();
UPDATE AUTHORS SET AUTHOR_FNAME='', AUTHOR_LNAME='' WHERE AUTHOR_ID='';

INSERT INTO BOOKS VALUES();
UPDATE BOOKS SET BOOK_NAME ='', BOOK_YEAR='', BOOK_ISBN='' WHERE BOOK_ID='';

INSERT INTO AUTHOR_ISBN VALUES( AUTHOR_ID, BOOK_ISBN );
UPDATE AUTHOR_ISBN SET AUTHOR_ID = '' WHERE BOOK_ISBN='';
UPDATE AUTHOR_ISBN SET BOOK_ISBN = '' WHERE AUTHOR_ID='';
