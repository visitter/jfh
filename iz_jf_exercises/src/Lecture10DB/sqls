--DROP TABLE AUTHORS
CREATE TABLE AUTHORS(
	AUTHOR_ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
	AUTHOR_FNAME VARCHAR(20) NOT NULL,
	AUTHOR_LNAME VARCHAR(20) NOT NULL
);

--DROP TABLE BOOKS
CREATE TABLE BOOKS(
	BOOK_ID INTEGER NOT NULL GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
	BOOK_NAME VARCHAR(100) NOT NULL,
	BOOK_YEAR INT NOT NULL,
	BOOK_ISBN VARCHAR(30) NOT NULL
);

--DROP TABLE AUTHOR_ISBN
CREATE TABLE AUTHOR_ISBN(
	AUTHOR_ID INTEGER NOT NULL,
	BOOK_ISBN VARCHAR(30)
);

INSERT INTO AUTHORS (AUTHOR_FNAME, AUTHOR_LNAME) VALUES(%s,%s);
UPDATE AUTHORS SET AUTHOR_FNAME=%s, AUTHOR_LNAME=%s WHERE AUTHOR_ID=%d;
SELECT * FROM AUTHORS
SELECT * FROM AUTHORS WHERE AUTHOR_FNAME LIKE '%i%'

INSERT INTO BOOKS (BOOK_NAME, BOOK_YEAR, BOOK_ISBN) VALUES(%s, %d, %s);
UPDATE BOOKS SET BOOK_NAME =%s, BOOK_YEAR=%d, BOOK_ISBN=%s WHERE BOOK_ID=%d;
SELECT BOOK_NAME, BOOK_YEAR, BOOK_ISBN FROM BOOKS

INSERT INTO AUTHOR_ISBN (AUTHOR_ID, BOOK_ISBN ) VALUES( %d, %s );
UPDATE AUTHOR_ISBN SET AUTHOR_ID = %s WHERE BOOK_ISBN=%s;
UPDATE AUTHOR_ISBN SET BOOK_ISBN = %s WHERE AUTHOR_ID=%d;
SELECT AUTHOR_ID, BOOK_ISBN FROM AUTHOR_ISBN


